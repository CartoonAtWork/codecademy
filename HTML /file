console.log ("Get the user choice");

const getUserChoise = userInput => {
  //Since a user can pass a parameter, with different capitalizations
  userInput = userInput.toLowerCase();
  if (userInput === 'rock' || userInput === 'paper' || userInput === 'scissors') {
    return userInput;
  } else {
    console.log("Error, make sure that you typed a valid choice.")
  }
};
console.log(getUserChoise('rock'));
console.log(getUserChoise('Tock'));
console.log(getUserChoise('Rock'));

console.log ("Get the computer choice");

//Get the computer choice.
const getComputerChoise = pcInput => {
  pcInput = Math.floor(Math.random()*3);
  switch(pcInput) {
    case 0 : return 'rock';
    break;
    case 1 : return 'paper';
    break; 
    case 2 : return 'scissors';
    break;
    default : return indefined;
    break; 
  }; 
};
console.log(getComputerChoise());

//Compare the two choices and determine a winner.


console.log ("Compare the two choices and determine a winner.");

const determineWinner = (userChoise, computerChoise) => {
  if (userChoise === computerChoise){
    return 'This game is a tie.';
  }
  if (userChoise === 'rock') {
    if (computerChoise === 'paper') {
      return 'The computer won!';
    } else {
      return 'The user won!';
    }
    if (userChoise === 'paper') {
    if (computerChoise === 'scissors') {
      return 'The computer won!';
    } else {
      return 'The user won!';
    }
    if (userChoise === 'scissors') {
    if (computerChoise === 'rock') {
      return 'The computer won!';
    } else {
      return 'The user won!';
    }
  };  
console.log(determineWinner('paper', 'paper')); 
};

